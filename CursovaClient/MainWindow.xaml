<Window x:Class="CursovaClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursovaClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="375*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbxChat" FontSize="18" Background="LightBlue" IsEnabled="False" />
        <Canvas Grid.Row="1" Background="Bisque">
            <Button Click="Button_Click_2" Height="70" Width="70" FontSize="20">Send</Button>
            <TextBox x:Name="tbxMsg" Height="35" Width="300" Margin="80 , 18 , 0 , 0" FontSize="18"/>
            <Label Width="70" Height="35" FontSize="20" Margin="385 , 18 , 0 , 0">Name :</Label>
            <TextBox x:Name="tbxName" Height="35" Width="75" Margin="465 , 18 , 0 , 0" FontSize="18"/>
            <Button x:Name="btnConnect" Click="Button_Click" Height="70" Width="105" FontSize="20" Margin="560 , 0 ,0 ,0">Connect</Button>
            <Button Click="Button_Click_1" Height="70" Width="105" FontSize="20" Margin="680 , 0 ,0 ,0">Disconnect</Button>


        </Canvas>
    </Grid>
</Window>
